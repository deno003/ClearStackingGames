<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="large" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">#8CA7C2</item>
    </style>

    <style name="medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#8CA7C2</item>
    </style>

    <style name="small" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#93AFCC</item>
    </style>

    <style name="tiny" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">#93AFCC</item>
    </style>

</resources>