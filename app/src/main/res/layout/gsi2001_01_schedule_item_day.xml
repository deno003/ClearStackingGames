<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/gsi2001_01_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:textAppearance="@style/medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gsi2001_01_day_of_the_week"
        tools:text="28" />

    <TextView
        android:id="@+id/gsi2001_01_day_of_the_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/tiny"
        app:layout_constraintEnd_toEndOf="@+id/gsi2001_01_day"
        app:layout_constraintStart_toStartOf="@+id/gsi2001_01_day"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="火" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gsi2001_01_item_recycler_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gsi2001_01_day"
        app:layout_constraintTop_toTopOf="@+id/gsi2001_01_day_of_the_week">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>